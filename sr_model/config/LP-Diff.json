{
    "name": "LP-Diff",
    "phase": "train",
    "gpu_ids": [
        0
    ],
    "path": { 
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
       
        "resume_state": "./experiments/LP-Diff_260201_152215/checkpoint/I10000_E233"
    },
    "datasets": {
        "train": {
            "name": "ICPR",
            "mode": "LRHR", 
            
            "dataroot": "/data/train",
            "width": 224,
            "height": 112,
            "batch_size": 10,
            "num_workers": 0,
            "use_shuffle": true,   
            "_comment_split": "=== BASELINE SPLIT COMPATIBILITY ===",
            "val_split_file": "val_tracks.json",
            "test_split_file": "test_tracks.json",   
            "val_size": 100,
            "test_size": 0,
            "test_split": 0.01,        
            "random_seed": 42         
        },
        "val": {
            "name": "ICPR",
            "mode": "LRHR",
            "width": 224,
            "height": 112,
            
            "dataroot": "/data/train",
            "val_split_file": "val_tracks.json",
            "test_split_file": "test_tracks.json",
            "val_size": 100,
            "test_size": 0,
            "test_split": 0.01,        
            "random_seed": 42         
        }
    },
    "model": {
        "finetune_norm": false,
        "unet": {
            "in_channel": 6,   
            "out_channel": 3,
            "inner_channel": 64,
            "channel_multiplier": [
                1,  
                2,  
                4,  
                8,      
                8    
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 2,
            "dropout": 0.1
        },
        "beta_schedule": { 
            "train": {
                "schedule": "linear",
                "n_timestep": 100, 
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 100,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 128,
            "channels": 3,
            "conditional": true 
        }
    },
    "train": {
        "use_prerain_MTA": false, 
        "resume_training": false, 
        "MTA": "./best_377.pt",
        "n_iter": 200000,
        "val_freq": 2e4,         
        "save_checkpoint_freq": 1e4,     
        "print_freq": 200,  
        "optimizer": {
            "type": "adam",
            "lr": 2.5e-3
        },
        "ema_scheduler": { 
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "LP-Diff"
    }
}
